<UserControl
    x:Class="Nukepayload2.UI.UWP.ErrorBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="400">
    <Grid Background="#40ff0000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid VerticalAlignment="Top" Padding="4,4,2,0">
            <Ellipse Fill="Red" Width="24" Height="24"/>
            <FontIcon Foreground="White" FontFamily="Segoe MDL2 Assets" FontSize="12" Glyph="&#xE106;" />
        </Grid>
        <TextBlock x:Name="TblErrorText" Grid.Column="1" Margin="4" TextWrapping="Wrap" FontSize="16"/>
        <Button VerticalAlignment="Top" Grid.Column="2" Background="#20ffffff" Click="BtnOk_Click">
            <FontIcon FontFamily="Segoe MDL2 Assets" FontSize="16" Glyph="&#xE106;" />
        </Button>
    </Grid>
</UserControl>
